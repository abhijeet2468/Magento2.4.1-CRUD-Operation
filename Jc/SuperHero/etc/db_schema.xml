<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="jc_superhero" resource="default" engine="innodb" comment="Super Hero table to store Super Heroes information">

		<column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Hero ID Auto Increment"/>

		<column xsi:type="varchar" name="name" nullable="false" length="30" comment="Hero Name"/>

		<column xsi:type="varchar" name="description" nullable="false" length="100" comment="Description"/>

		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id"/>
		</constraint>
	</table>
</schema>

